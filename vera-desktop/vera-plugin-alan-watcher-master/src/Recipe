libraries.alan-watcher {
	install-directory = $(options.library-directory)/vera/plugins
	sources = alan-watcher.vala
	compile-flags = -O2 -flto
	link-flags = -flto -Wl,--as-needed
	
	vala-packages = gee-0.8 gio-2.0 libpeas-1.0 nala vera gdk-3.0 x11
	packages = gee-0.8 gio-2.0 libpeas-1.0 nala vera

}
