# Get the specified lines from a given file.

use 5.010;
use strict;
use warnings;

@ARGV == 2 or die <<"USAGE";
usage: ldump [file] [lines]

example: ldump /tmp/file.txt 23-40,80,105
USAGE

my @lines = map { /^(\d+)(?>-|\.\.)(\d+)\z/ ? ($1 .. $2) : $_ }
  split /\s*,\s*/, pop;

my %lookup;
@lookup{@lines} = ();

while (<>) {
    print if exists($lookup{$.});
}
